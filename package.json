{
  "name": "habit-tracker",
  "version": "1.0.1",
  "description": "Advanced Habit Tracker with Monthly & Yearly Analytics",
  "main": "main.js",
  "homepage": "./",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "chart.js": "3.9.1"
  },
  "devDependencies": {
    "electron": "27.0.0",
    "electron-builder": "24.6.4"
  },
  "build": {
    "appId": "com.habittracker.app",
    "productName": "Habit Tracker",
    "files": [
      "index.html",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
